<%= render :partial => 'nav_buttons' %>
 
<% title t(:Last_published_recetas) %>
<h2 class="title"><%= yield(:title) %></h2>

<%= render :partial => 'list_recetas',
   :locals => {:recetas => @recetas} %>

<br /><br />


<h1 class="title"><%= t(:Best_recetas_by_category) %></h1>

<% for category in @categories %>	
	<div class="receta_category_div">
		<div class ="receta_category_name"><%= category.name %></div>
		<div>
			<%= link_to image_tag(category.categoryphoto.url(:small), :size => "172x150"),
			 recetas_categoria_path(category) %>		
		</div>
	</div>
<% end %>
