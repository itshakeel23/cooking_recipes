<% title t(:Advices_searcher) %>
<h2 class="title"><%= yield(:title) %></h2>


<% form_for :advice, :url => resultados_advices_path, :html => {:method => :get} do |f| %>
	<div class="form_div">
	   <div class="form_col1">
	    <%= f.label :name, t(:Title) %><br />
	    <%= f.text_field :name %>
	  </div>
	</div>

	<div class="clear"></div>

	<div class="form_div">
		<div class="form_col1">
	    <%= f.label :description, t(:Description) %><br />
	    <%= f.text_area :description %>
		</div>
	</div>		


	<div class="form_div">
	  <div class="form_col1"
		  <%= label_tag :tags, t(:tags_comma_separated) %><br/>
	    <%= text_field_tag 'tag_list', "", {:autocomplete => "off", :size => 35}%>
	    <div class="auto_complete" id="tag_list_auto_complete">
	      <%= auto_complete_field 'tag_list',
	        {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'},
	         :tokens => [',', ' ']  }%>
	    </div>
	  </div>
	</div>

	<div class="clear"></div><br/>

	<p>
    <%= submit_tag t(:Search) %>
	</p>
<% end %>