<% @user.password = @user.password_confirmation = nil %>
<div>
<%= error_messages_for :user %>
</div>

<% form_for(@user, :html =>{ :multipart => true })   do |f| %>
<div class="form_div" style="padding-top:15px;">
	<div class="form_col1">
		<%= label_tag 'nombre' %><br/>
		<%= f.text_field :name %>
	</div>

	<div class="form_col2">
		<%= label_tag 'apellidos' %><br/>
		<%= f.text_field :surname %>
	</div>
</div>


<div class="form_div">
	<div class="form_col1">
		<%= label_tag 'login' %><br/>
		
		<% if action_name != 'new'%>
			<%= f.text_field :login, :disabled => 'disabled' %>
		<% else %>
			<%= f.text_field :login %>
		<% end %>
	</div>

	<div class="form_col2">
		<%= label_tag 'email' %><br/>
		<%= f.text_field :email %>
	</div>
</div>

<div class="form_div">
	<div class="form_col1">
		<%= label_tag 'password' %><br/>
		<%= f.password_field :password %>
	</div>

	<div class="form_col2">
		<%= label_tag 'password_confirmation', 'Confirmar password' %><br/>
		<%= f.password_field :password_confirmation %>
	</div>
</div>


<div class="form_div">
	<div class="form_col1">
		<%= label_tag 'Localidad' %><br/>
		<%= f.text_field :town %>
	</div>


	<div class="form_col2">
		<%= label_tag 'PaÃ­s' %><br/>
		<%= f.text_field :country %>
	</div>	
</div>

<div class="form_div">
	<div class="form_col1">
		<%= label_tag 'Avatar' %><br/>
		<%= f.file_field :avatar %>
	</div>
</div>

<p class="form_but"><%= submit_tag 'Registrarse' %></p>
<% end -%>