<% @user.password = @user.password_confirmation = nil %>
<div>
<%= error_messages_for :user %>
</div>

<% form_for(@user, :html =>{ :multipart => true })   do |f| %>
<div class="form_div">
	<div class="form_col1">
		<%= f.label :name, t(:Name) %><br/>
		<%= f.text_field :name %>
	</div>

	<div class="form_col2">
		<%= f.label :surname, t(:last_name) %><br/>
		<%= f.text_field :surname %>
	</div>
</div>

<div class="form_div">
	<div class="form_col1">
		<%= f.label :login, 'Login' %><br/>		
		<% if action_name != 'new'%>
			<%= f.text_field :login, :disabled => 'disabled' %>
		<% else %>
			<%= f.text_field :login %>
		<% end %>
	</div>

	<div class="form_col2">
		<%= f.label :email, 'Email' %><br/>
		<%= f.text_field :email %>
	</div>
</div>

<div class="form_div">
	<div class="form_col1">
		<%= f.label :password, t(:password) %><br/>
		<%= f.password_field :password %>
	</div>

	<div class="form_col2">
		<%= label_tag 'password_confirmation', t(:confirm_password) %><br/>
		<%= f.password_field :password_confirmation %>
	</div>
</div>

<div class="form_div">
	<div class="form_col1">
		<%= f.label :country, t(:country) %><br/>
		<%= f.text_field :country %>
	</div>


	<div class="form_col2">
		<%= f.label :town, t(:town)%><br/>
		<%= f.text_field :town %>
	</div>	
</div>

<div class="form_div">
	<div class="form_col1">
		<%= label_tag 'Avatar' %><br/>
		<%= f.file_field :avatar %>
	</div>
</div>

<div class="form_div">
	<p class="login_check">
    <%= f.check_box :receive_comments_emails %>
		<%= f.label :receive_comments_emails, t(:receive_comments_emails_exp) %>
	</p>
  <div class="clear"></div>
	<p class="login_check">
    <%= f.check_box :receive_friends_emails %>
		<%= f.label :receive_friends_emails, t(:receive_friends_emails_exp) %>
	</p>
</div>


<div class="clear"></div><br/>
<p class="form_but">
  <% if action_name != 'new'%>
    <%= submit_tag t(:Update) %>
  <% else %>
    <%= submit_tag t(:sign_up) %>
  <% end%>
</p>
<% end -%>