<h1>Editing forum_reply</h1>

<% form_for(@forum_reply) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :forum_post_id %><br />
    <%= f.text_field :forum_post_id %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :reply %><br />
    <%= f.text_area :reply %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @forum_reply %> |
<%= link_to 'Back', forum_replies_path %>
