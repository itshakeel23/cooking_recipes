<h2>Inbox</h2>
<table>
	<tr>
		<th>¿Borrar?</th>
		<th>Asunto</th>
		<th>De</th>
		<th>Fecha recepción</th>
	</tr>
	<% if @messages.size == 0 %>
		<tr>
			<td colspan="4">
				No messages
			</td>
		</tr>
	<% else %>
		<% for message in @messages %>
			<tr>
				<td><%= check_box_tag "delete[]", message.id %></td>
				<td>
					<% if message.read? %>
					  <%= link_to h(message.subject), user_message_path(@user, message) %>
					<% else %>
					  <%= link_to "#{h(message.subject)} (no leído)", user_message_path(@user, message), :style => 'color: red;' %>
					<% end %>
				</td>
				<td><%= link_to h(message.sender.login), user_path(@user) %></td>
		    <td><%=h mydatetime_format(message.created_at) %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="4">
				<%= submit_tag "Delete" %>
			</td>
		</tr>
	<% end %>
</table>
<%= link_to "Enviados", user_messages_path(@user, :mailbox => :sent)%> |
<%= link_to "Redactar", new_user_message_path(@user)%>