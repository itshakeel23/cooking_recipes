<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%=SITE_NAME%>: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'recetas' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'rating' %>
  <%= stylesheet_link_tag 'noticias' %>
  <%= stylesheet_link_tag 'auto_complete' %>
  <%= javascript_include_tag :defaults%>
</head>

<body>
	<div id="wrapper">
    <div id="header">
	  	<div id="logo">
	      <h1><%= link_to SITE_NAME, '/' %></h1>
		  </div>
		  <div id="menu">
		    <ul>
			    <% if current_user && current_user.is_admin? %> 
    			  <li>
		    		  <%= link_to t(:Administration), admins_path %>
			      </li>
			    <% end %>
			    <li>
				    <%= link_to t(:News), noticias_path %>
			    </li>
    			<li>
		  		  <%= link_to t(:Recipes), recetas_path %>
			    </li>
  			  <li>
				    <%= link_to t(:Advises), '/' %>
			    </li>
  			  <li>
				    <%= link_to t(:Restaurants), '/'%>
  			  </li>
  			  <li>
			  	  <%= link_to t(:Forums), :controller => 'forums', :action => 'index' %>
			    </li>
    			<li>
		    		<%= link_to t(:Contact), '/' %>
		 	    </li>
		    </ul>
	    </div>
	  </div>	<!-- end #header -->

    <div id="page">
		  <div id="content" <%unless no_forums%>style="width:auto;"<%end%>>
			  <div class="post">	
				  <div class="flash_message">
					  <%= my_flash_message(flash) %>
		      </div>	   
				  <div class="clear"></div>
				  <%= yield  %>
			  </div>
		  </div> <!-- end #content -->
      <% if no_forums %>
		    <div id="sidebar">
				  <div id="sidebar-bgtop"></div>
				  <div id="sidebar-content">
					  <div id="sidebar-bgbtm">
					    <ul>
					      <li id="search">
						      <h3><%= t(:Search)%></h3>
							    <% form_for :receta, :url => { :action => "resultados_busqueda" }   do |f| %>
								    <fieldset>
								      <%= f.text_field :name, :size => 24 %>
								      <%= f.submit t(:Search) %>
								    </fieldset>
           				<% end %>
					      </li>
        				<li>
				      	  <h3><%= t(:Privated_menu) %></h3>
        					<ul>
				      		  <li>
				              <%= log_in_out %> 
				              <% if !logged_in? %>
							    		  / <%= link_to t(:Register), '/signup' %>
							        <% end %> 
							      </li>	
								    <% if logged_in? %>
								      <li><%= link_to t(:Privated_messages), 	
          						  user_messages_path(current_user)%>
								        <%= user_unread_messages %>
          						</li>
					          	<li><%= link_to t(:My_data), current_user %></li>
           						<li><%= link_to t(:My_recipes), mis_recetas_user_path(current_user)%></li>
          						<li>
                        <%= link_to t(:My_friends), mis_amigos_user_path(current_user)%> 
                        <span class="alert">
                          (<%= current_user.received_invitations.size %>)
                        </span>
	                    </li>
     	 							<% end %>
						     	</ul>
						    </li>
         				<li>
                  <%= render :partial => 'shared/last_recipes_voted'%>
        				</li>			
        				<li>
                  <%= render :partial => 'shared/best_voted_chefs'%>
        				</li>
          		</ul>
        		</div>
				  </div>
 	  		</div> 	<!-- end #sidebar -->
      <% end %>
		<div class="clear"></div>
	  </div>	<!-- end #page -->	
  </div>

  <div id="footer">
    <p><%= t(:Footer_content)%> <%= link_to 'Juan de FrÃ­as', '/'%></p>
  </div>
  
</body>
</html>
