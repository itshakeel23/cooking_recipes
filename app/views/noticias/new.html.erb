<h1>New noticia</h1>

<% form_for(@noticia) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </p>

  <p>
    <%= f.label :img_0 %><br />
    <%= f.text_field :img_0 %>
  </p>

  <p>
    <%= f.label :intro %><br />
    <%= f.text_area :intro %>
  </p>



  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', noticias_path %>
