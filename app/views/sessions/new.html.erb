<% title "Login" %>
<h1><%= yield(:title) %></h1>

<p>
  <%= t(:if_no_count)%>, 
  <%= link_to t(:register_as_new), signup_path %>. <%= t(:free)%>
</p>

<% form_tag session_path do %>
	<p><%= label_tag 'login' %><br />
	<%= text_field_tag 'login', @login %></p>

	<p><%= label_tag 'password' %><br/>
	<%= password_field_tag 'password', nil, :class => 'fixed_width' %></p>

	<p class="login_check">
	<%= label_tag 'remember_me',  t(:Remember_me) %>
	<%= check_box_tag 'remember_me', '1', @remember_me %></p>

	<p class="login_button"><%= submit_tag 'Log in' %></p>
<% end %>

<br/>
<p>
  <%= t(:forgot_your_password) %>
  <%= link_to t(:here), '#', :onclick => "$('forgot_password_div').appear();return false;"%>
</p>
<% form_for :user, :url => forgot_password_users_path,
:html => {:id => 'forgot_password_div', :style => "display:none;"} do |f| %>
  <p><%= t(:forgot_password_intro) %></p>

  <p>
    <%= label_tag 'email' %><br/>
    <%= text_field_tag 'email'%>
  </p>  

  <p>
	  <%= submit_tag t(:want_new_password)%>
	</p>

<% end %>
