<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Country</th>
    <th>Town</th>
    <th>Google maps code</th>
    <th>Description</th>
    <th>Specialty</th>
    <th>Creator rating</th>
    <th>Avg price</th>
    <th>Photo file name</th>
    <th>Photo content type</th>
    <th>Photo file size</th>
    <th>Photo updated at</th>
  </tr>

<% for restaurant in @restaurants %>
  <tr>
    <td><%=h restaurant.name %></td>
    <td><%=h restaurant.address %></td>
    <td><%=h restaurant.country %></td>
    <td><%=h restaurant.town %></td>
    <td><%=h restaurant.google_maps_code %></td>
    <td><%=h restaurant.description %></td>
    <td><%=h restaurant.specialty %></td>
    <td><%=h restaurant.creator_rating %></td>
    <td><%=h restaurant.avg_price %></td>
    <td><%=h restaurant.photo_file_name %></td>
    <td><%=h restaurant.photo_content_type %></td>
    <td><%=h restaurant.photo_file_size %></td>
    <td><%=h restaurant.photo_updated_at %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

