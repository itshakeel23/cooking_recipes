<% cache 'best_restaurants' do %>
  <h3><%= t(:best_restaurants) %></h3>
  <ul>
    <% for restaurant in Restaurant.top %>
	    <li>
	      <%= link_to truncate(restaurant.name,20), restaurant_path(restaurant) %>
		    <%= t(:by)%> <%= link_to restaurant.user.login, user_path(restaurant.user) %> 
		    (<%= restaurant.rating %>/5) 
      </li>
    <% end %>
  </ul>
<%end %>

